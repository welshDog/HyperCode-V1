{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HyperCode Research Database Schema",
  "description": "Neurodivergent-first programming language research database with AI and quantum computing integration",
  "type": "object",
  "required": ["schema_version", "version", "project_name", "last_updated", "research_data"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Schema version in YYYY-MM format"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of database content"
    },
    "project_name": {
      "type": "string",
      "const": "HyperCode",
      "description": "Project identifier"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "updated_by": {
      "type": "string",
      "description": "User/agent identifier that made the update"
    },
    "research_data": {
      "type": "object",
      "required": ["core_concept", "historical_roots", "neurodivergent_features", "ai_compatibility", "quantum_molecular"],
      "properties": {
        "core_concept": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "mission": { "type": "string" },
            "core_principles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "target_audience": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "historical_roots": {
          "type": "object",
          "properties": {
            "plankalkul": {
              "type": "object",
              "properties": {
                "creator": { "type": "string" },
                "year": { "type": "string" },
                "era": { "type": "string" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "significance": { "type": "string" },
                "modern_implementations": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "url": { "type": "string", "format": "uri" },
                      "year": { "type": "integer" },
                      "language": { "type": "string" }
                    }
                  }
                }
              }
            },
            "brainfuck": {
              "type": "object",
              "properties": {
                "creator": { "type": "string" },
                "year": { "type": "integer" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "turing_complete": { "type": "boolean" },
                "modern_uses": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "befunge": {
              "type": "object",
              "properties": {
                "creator": { "type": "string" },
                "year": { "type": "integer" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "paradigm": { "type": "string" }
              }
            }
          }
        },
        "neurodivergent_features": {
          "type": "object",
          "properties": {
            "design_principles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "adhd_optimizations": {
              "type": "object",
              "properties": {
                "hyperfocus_targets": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "immediate_feedback": { "type": "boolean" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "autism_optimizations": {
              "type": "object",
              "properties": {
                "pattern_recognition": { "type": "boolean" },
                "literal_semantics": { "type": "boolean" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "dyslexia_optimizations": {
              "type": "object",
              "properties": {
                "visual_first": { "type": "boolean" },
                "minimal_text": { "type": "boolean" },
                "features": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "compatible_languages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "reason": { "type": "string" },
                  "neurodivergent_benefits": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "ai_compatibility": {
          "type": "object",
          "properties": {
            "supported_models": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "provider": { "type": "string" },
                  "integration_type": { "type": "string" },
                  "capabilities": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            },
            "hybrid_integration_patterns": {
              "type": "array",
              "items": { "type": "string" }
            },
            "repl_first": { "type": "boolean" },
            "research_agents": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "function": { "type": "string" }
                }
              }
            }
          }
        },
        "quantum_molecular": {
          "type": "object",
          "properties": {
            "quantum_languages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "provider": { "type": "string" },
                  "paradigm": { "type": "string" },
                  "features": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            },
            "molecular_computing": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "application": { "type": "string" }
                }
              }
            },
            "frontier_research": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "topic": { "type": "string" },
                  "status": { "type": "string", "enum": ["emerging", "active", "mature"] },
                  "resources": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "last_sync": {
          "type": "string",
          "format": "date-time"
        },
        "record_count": { "type": "integer" },
        "null_percent": { "type": "number" },
        "schema_valid": { "type": "boolean" },
        "freshness_hours": { "type": "number" }
      }
    }
  }
}
